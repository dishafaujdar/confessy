generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  username    String        @unique
  confessions Confessions[]
  Likes       Like[]
}

model Confessions {
  id     String @id @default(uuid())
  text   String
  userId String
  user   User   @relation(fields: [userId], references: [id])
  Likes  Like[]
}

model Like {
  id           String      @id @default(uuid())
  userId       String
  userLike     User        @relation(fields: [userId], references: [id])
  ConfessionId String
  confession   Confessions @relation(fields: [ConfessionId], references: [id])

  @@unique([userId, ConfessionId])
}
